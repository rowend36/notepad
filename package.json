{
  "private": true,
  "name": "notepad",
  "version": "0.0.0",
  "license": "MIT",
  "description": "A simple in-browser offline notepad",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--openssl-legacy-provider preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "cross-env preact watch",
    "start": "cross-env preact watch",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rowend36/notepad.git"
  },
  "keywords": [
    "notepad",
    "pwa",
    "editor"
  ],
  "author": "Rowend Duke",
  "bugs": {
    "url": "https://github.com/rowend36/notepad/issues"
  },
  "homepage": "https://github.com/rowend36/notepad#readme",
  "devDependencies": {
    "@babel/plugin-transform-react-jsx-source": "^7.19.6",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^4.0.0",
    "eslint": "^8.30.0",
    "eslint-config-preact": "^1.3.0",
    "jest": "^27.0.0",
    "jest-preset-preact": "^4.0.5",
    "preact-cli": "^3.4.2",
    "sirv-cli": "^2.0.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.2.1",
    "@fortawesome/free-regular-svg-icons": "^6.2.1",
    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "base64-arraybuffer": "^1.0.2",
    "fflate": "^0.7.4",
    "preact": "^10.11.3",
    "preact-render-to-string": "^5.2.6",
    "preact-router": "^3.2.1",
    "pretty-bytes": "^6.0.0",
    "prosemirror-example-setup": "^1.2.1",
    "prosemirror-schema-basic": "^1.2.1"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
